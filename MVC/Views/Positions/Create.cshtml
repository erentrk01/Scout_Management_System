@model PositionModel
@* Generated from Custom Template. *@
@* Model namespace using directive should be added to _ViewImports.cshtml. *@
@{
    ViewData["Title"] = "Create";
}

<h1>@ViewData["Title"]</h1>

<h4>Position</h4>
<hr />
<div class="container">
    <div class="row">
        <div class="col-md-8">
            <form asp-action="Create" class="needs-validation" novalidate>
                @Html.AntiForgeryToken()
                <div asp-validation-summary="All" class="text-danger"></div>

                <div class="mb-3">
                    <label asp-for="Experience" class="form-label"></label>
                    <select asp-for="Experience" class="form-select" required>
                        <option value="0">Rookie</option>
                        <option value="1">Regular</option>
                        <option value="2">Key</option>
                        <option value="3">Senior</option>
                        <option value="4">Legend</option>
                    </select>
                    <div class="invalid-feedback">
                        Please select the experience level.
                    </div>
                </div>

                <div class="row">
                    <div class="col-md-6">
                        <div class="mb-3">
                            <label asp-for="SpecialSkill" class="form-label"></label>
                            <input asp-for="SpecialSkill" class="form-control" required />
                            <div class="invalid-feedback">
                                Please provide a special skill.
                            </div>
                        </div>
                    </div>

                    <div class="col-md-6">
                        <div class="mb-3">
                            <label asp-for="MainPositioning" class="form-label"></label>
                            <input asp-for="MainPositioning" class="form-control" required />
                            <div class="invalid-feedback">
                                Please provide the main positioning.
                            </div>
                        </div>
                    </div>
                </div>

                <div class="row">
                    <div class="col-md-6">
                        <div class="mb-3">
                            <label asp-for="SecondaryPositioning" class="form-label"></label>
                            <input asp-for="SecondaryPositioning" class="form-control" required />
                            <div class="invalid-feedback">
                                Please provide the secondary positioning.
                            </div>
                        </div>
                    </div>

                    <div class="col-md-6">
                        <div class="mb-3">
                            <label asp-for="Description" class="form-label"></label>
                            <input asp-for="Description" class="form-control" required />
                            <div class="invalid-feedback">
                                Please provide a description.
                            </div>
                        </div>
                    </div>
                </div>

                <div class="row">
                    <div class="col-md-6">
                        <div class="mb-3">
                            <label asp-for="TechnicalProficiency" class="form-label"></label>
                            <input asp-for="TechnicalProficiency" class="form-control" required />
                            <div class="invalid-feedback">
                                Please provide technical proficiency.
                            </div>
                        </div>
                    </div>

                    <div class="col-md-6">
                        <div class="mb-3">
                            <label asp-for="DribblingAbility" class="form-label"></label>
                            <input asp-for="DribblingAbility" class="form-control" required />
                            <div class="invalid-feedback">
                                Please provide dribbling ability.
                            </div>
                        </div>
                    </div>
                </div>

                <div class="row">
                    <div class="col-md-6">
                        <div class="mb-3">
                            <label asp-for="PressingAbility" class="form-label"></label>
                            <input asp-for="PressingAbility" class="form-control" required />
                            <div class="invalid-feedback">
                                Please provide pressing ability.
                            </div>
                        </div>
                    </div>
                </div>

                <div class="mb-3">
                    <button type="submit" class="btn btn-primary">Save</button>
                    <button type="reset" class="btn btn-outline-primary">Reset</button>
                    <a asp-action="Index" class="btn btn-link">Back to List</a>
                </div>
            </form>
        </div>
    </div>
</div>