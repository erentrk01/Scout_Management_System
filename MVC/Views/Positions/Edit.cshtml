@model PositionModel
@*Generated from Custom Template.*@
@*Model namespace using directive should be added to _ViewImports.cshtml.*@

@{
    ViewData["Title"] = "Edit";
}

<h1>@ViewData["Title"]</h1>

<h4>Position</h4>
<hr />
<div class="row">
    <div class="col-12">
        <form asp-action="Edit">
		@Html.AntiForgeryToken()
            <div asp-validation-summary="All" class="text-danger"></div>
			<div class="row mb-3">
				<label asp-for="Experience" class="col-2 col-form-label"></label>
				<div class="col-5">
					<select asp-for="Experience" class="form-select">
						<option value="0">Rookie</option>
						<option value="1">Regular</option>
						<option value="2">Key</option>
						<option value="3">Senior</option>
						<option value="4">Legend</option>
					</select>
					<span asp-validation-for="Experience" class="text-danger"></span>
				</div>
			</div>
            <div class="row mb-3">
                <label asp-for="SpecialSkill" class="col-2 col-form-label"></label>
				<div class="col-5">
					<input asp-for="SpecialSkill" class="form-control" />
					<span asp-validation-for="SpecialSkill" class="text-danger"></span>
				</div>
            </div>
            <div class="row mb-3">
                <label asp-for="MainPositioning" class="col-2 col-form-label"></label>
				<div class="col-5">
					<input asp-for="MainPositioning" class="form-control" />
					<span asp-validation-for="MainPositioning" class="text-danger"></span>
				</div>
            </div>
            <div class="row mb-3">
                <label asp-for="SecondaryPositioning" class="col-2 col-form-label"></label>
				<div class="col-5">
					<input asp-for="SecondaryPositioning" class="form-control" />
					<span asp-validation-for="SecondaryPositioning" class="text-danger"></span>
				</div>
            </div>
            <div class="row mb-3">
                <label asp-for="Description" class="col-2 col-form-label"></label>
				<div class="col-5">
					<input asp-for="Description" class="form-control" />
					<span asp-validation-for="Description" class="text-danger"></span>
				</div>
            </div>
            <div class="row mb-3">
                <label asp-for="TechnicalProficiency" class="col-2 col-form-label"></label>
				<div class="col-5">
					<input asp-for="TechnicalProficiency" class="form-control" />
					<span asp-validation-for="TechnicalProficiency" class="text-danger"></span>
				</div>
            </div>
            <div class="row mb-3">
                <label asp-for="DribblingAbility" class="col-2 col-form-label"></label>
				<div class="col-5">
					<input asp-for="DribblingAbility" class="form-control" />
					<span asp-validation-for="DribblingAbility" class="text-danger"></span>
				</div>
            </div>
            <div class="row mb-3">
                <label asp-for="PressingAbility" class="col-2 col-form-label"></label>
				<div class="col-5">
					<input asp-for="PressingAbility" class="form-control" />
					<span asp-validation-for="PressingAbility" class="text-danger"></span>
				</div>
            </div>
            <input type="hidden" asp-for="Id" />
            <div class="row mb-3">
				<div class="offset-2 col-5">
					<input type="submit" value="Save" class="btn btn-primary" />
					&nbsp;&nbsp;
                    <button type="reset" class="btn btn-outline-primary">Reset</button>
					&nbsp;&nbsp;
					<a asp-action="Index">Back to List</a>
				</div>
            </div>
        </form>
    </div>
</div>




