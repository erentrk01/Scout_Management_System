@model PositionModel
@*Generated from Custom Template.*@
@*Model namespace using directive should be added to _ViewImports.cshtml.*@

@{
    ViewData["Title"] = "Details";
}

<div class="container">
    <div class="row justify-content-center mt-4">
        <div class="col-md-8">
            <div class="card">
                <div class="card-body">
                    <h2 class="card-title">@Model.Experience @Model.MainPositioning Request</h2>
                    <hr>
                    <p class="card-text">@Model.Description</p>
                    <div class="mt-3">
                        <ul class="list-group list-group-flush">
                            <li class="list-group-item"><strong>Created At:</strong> @Html.DisplayFor(model => model.CreatedAt)</li>
                            <li class="list-group-item"><strong>Last Updated At:</strong> @Html.DisplayFor(model => model.LastUpdatedAt)</li>
                            <li class="list-group-item"><strong>Special Skill:</strong> @Html.DisplayFor(model => model.SpecialSkill)</li>
                            <li class="list-group-item"><strong>Secondary Positioning:</strong> @Html.DisplayFor(model => model.SecondaryPositioning)</li>
                            <li class="list-group-item"><strong>Technical Proficiency:</strong> @Html.DisplayFor(model => model.TechnicalProficiency)</li>
                            <li class="list-group-item"><strong>Dribbling Ability:</strong> @Html.DisplayFor(model => model.DribblingAbility)</li>
                            <li class="list-group-item"><strong>Pressing Ability:</strong> @Html.DisplayFor(model => model.PressingAbility)</li>
                        </ul>
                    </div>
                </div>
                <div class="card-footer text-muted text-center">
                    <a class="btn btn-primary mr-2" asp-action="Edit" asp-route-id="@Model?.Id">Edit</a>
                    <a class="btn btn-success mr-2" asp-action="Index" asp-route-id="@Model?.Id">View Reports of this position</a>
                    <a class="btn btn-secondary" asp-action="Index">Back to List</a>
                </div>
            </div>
        </div>
    </div>
</div>
