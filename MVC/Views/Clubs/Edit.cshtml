@model ClubModel
@*Generated from Custom Template.*@
@*Model namespace using directive should be added to _ViewImports.cshtml.*@

@{
    ViewData["Title"] = "Edit";
}

<h1>@ViewData["Title"]</h1>

<h4>Club</h4>
<hr />
<div class="row">
    <div class="col-12">
        <form asp-action="Edit">
		@Html.AntiForgeryToken()
			<div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <div class="row mb-3">
                <label asp-for="Name" class="col-2 col-form-label"></label>
				<div class="col-5">
					<input asp-for="Name" class="form-control" />
					<span asp-validation-for="Name" class="text-danger"></span>
				</div>
            </div>
            <div class="row mb-3">
                <label asp-for="Country" class="col-2 col-form-label"></label>
				<div class="col-5">
					<input asp-for="Country" class="form-control" />
					<span asp-validation-for="Country" class="text-danger"></span>
				</div>
            </div>
            <div class="row mb-3">
                <label asp-for="City" class="col-2 col-form-label"></label>
				<div class="col-5">
					<input asp-for="City" class="form-control" />
					<span asp-validation-for="City" class="text-danger"></span>
				</div>
            </div>
            <div class="row mb-3">
                <label asp-for="Mail" class="col-2 col-form-label"></label>
				<div class="col-5">
					<input asp-for="Mail" class="form-control" />
					<span asp-validation-for="Mail" class="text-danger"></span>
				</div>
            </div>
            <input type="hidden" asp-for="Id" />
            <div class="row mb-3">
				<div class="offset-2 col-5">
					<input type="submit" value="Save" class="btn btn-primary" />
					&nbsp;&nbsp;
                    <button type="reset" class="btn btn-outline-primary">Reset</button>
					&nbsp;&nbsp;
					<a asp-action="Index">Back to List</a>
				</div>
            </div>
        </form>
    </div>
</div>




